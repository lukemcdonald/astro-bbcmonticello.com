  },
  "devDependencies": {
		"@ianvs/prettier-plugin-sort-imports": "^3.7.1",
    "npm-run-all": "^4.1.5",
		"eslint": "^8.33.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-tailwindcss": "^3.8.3",
